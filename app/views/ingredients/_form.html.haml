= form_for @ingredient do |f|
  -if @ingredient.errors.any?
    #error
      %h2= "#{pluralize(@ingredient.errors.count, "error")} prohibited this ingredient from being saved:"
      %ul
        - @ingredient.errors.full_messages.each do |msg|
          %li= msg

  = f.label :name
  = f.text_field :name

  %ul.inline-input-list
    - ingredient_types.each do |type_name|
      %li
        %label
          = f.radio_button :ingredient_type, type_name
          = type_name

  = f.label :notes
  = f.text_area :notes
  
  .actions
    = f.submit 'Save'
