= form_for @log_entry do |f|
  -if @log_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log_entry.errors.count, "error")} prohibited this log_entry from being saved:"
      %ul
        - @log_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :batch_id
    = f.number_field :batch_id
  .field
    = f.label :step
    = f.number_field :step
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :gravity
    = f.text_field :gravity
  .field
    = f.label :temperature
    = f.text_field :temperature
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
