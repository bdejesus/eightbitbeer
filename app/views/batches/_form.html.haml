= form_for @batch do |f|
  -if @batch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@batch.errors.count, "error")} prohibited this batch from being saved:"
      %ul
        - @batch.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :recipe_id
    = f.number_field :recipe_id
  .field
    = f.label :abv
    = f.text_field :abv
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :rating
    = f.number_field :rating
  .field
    = f.label :starred
    = f.check_box :starred
  .field
    = f.label :starting_gravity
    = f.text_field :starting_gravity
  .actions
    = f.submit 'Save'
